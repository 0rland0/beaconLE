<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#221D23"
    android:gravity="center_vertical|center_horizontal"
    android:id="@+id/linearLayout">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:text="Make Karlsruhe to a smarter city!\n Start collecting valuable data from sensors around you"
        android:id="@+id/information" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint"
        android:textColor="#ffffffff"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:text="Slide to the right and collect more points, but your device will need more power."
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <SeekBar
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:id="@+id/time_slices"
        android:layout_marginTop="20dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="50" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/pointTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="77sp"
        android:text="42"
        android:textColor="#B29F52"
        android:layout_gravity="center_horizontal|center_vertical" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="points"
        android:textColor="#B29F52"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:text="Start helping"
        android:id="@+id/btn_service"
        android:background="#659B5E"
        android:textColor="#FFF"
        android:onClick="serviceBtnClicked" />

</LinearLayout>