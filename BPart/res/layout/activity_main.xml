<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#221D23"
    android:gravity="center_vertical|center_horizontal">

    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:text="Make Karlsruhe to a smarter city!\n Start collecting valuable data from sensors around you"/>
    
    <TextView 
        android:layout_marginTop="40dp"
        android:id="@+id/pointTxtView"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="77sp"
        android:text="42"
        android:textColor="#D1603D"
        android:layout_gravity="center_horizontal|center_vertical"
         />
    
        <TextView 
       
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="points"
        android:textColor="#D1603D"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="15dp"
         />

	<Button
	    android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:text="Start helping"
        android:id="@+id/btn_service"
        android:background="#659B5E"
        android:textColor="#FFF"
        android:onClick="serviceBtnClicked"
        />

</LinearLayout>